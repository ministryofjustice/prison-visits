<% %i[day month year].each do |field_name| %>
  <div class="datefield form-group form-group-<%= field_name %>">
    <label for="prisoner_date_of_birth_<%= field_name %>">
      <%= t(field_name, scope: 'date.fields') %>
    </label>
    <input
      class="form-control"
      value="<%=
        prisoner.date_of_birth ?
          prisoner.date_of_birth.send(field_name) : ''
        %>"
      type="number"
      min="<%= prisoner.minimum_date_of_birth.send(field_name) %>"
      max="<%= prisoner.maximum_date_of_birth.send(field_name) %>"
      name="prisoner[date_of_birth][<%= field_name %>]"
      id="prisoner_date_of_birth_<%= field_name %>"
      aria-describedby="dobHint"
    />
  </div>
<% end %>
